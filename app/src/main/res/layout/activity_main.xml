<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_margin="10dp">

        <Button
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:id="@+id/btn1_row1"
            android:layout_margin="5dp"
            android:onClick="buttonClick"/>

        <Button
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:id="@+id/btn2_row1"
            android:layout_margin="5dp"
            android:onClick="buttonClick"/>

        <Button
            android:layout_height="40pt"
            android:layout_width="40pt"
            android:id="@+id/btn3_row1"
            android:layout_margin="5dp"
            android:onClick="buttonClick"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_margin="10dp">

        <Button
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:id="@+id/btn1_row2"
            android:layout_margin="5dp"
            android:onClick="buttonClick"/>

        <Button
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:id="@+id/btn2_row2"
            android:layout_margin="5dp"
            android:onClick="buttonClick"/>

        <Button
            android:layout_height="40pt"
            android:layout_width="40pt"
            android:id="@+id/btn3_row2"
            android:layout_margin="5dp"
            android:onClick="buttonClick"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_margin="10dp">

        <Button
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:id="@+id/btn1_row3"
            android:layout_margin="5dp"
            android:onClick="buttonClick"/>

        <Button
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:id="@+id/btn2_row3"
            android:layout_margin="5dp"
            android:onClick="buttonClick"/>

        <Button
            android:layout_height="40pt"
            android:layout_width="40pt"
            android:id="@+id/btn3_row3"
            android:layout_margin="5dp"
            android:onClick="buttonClick"/>

    </TableRow>



</TableLayout>